{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/app/redis-server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/app",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            }
        }
    ]
}
